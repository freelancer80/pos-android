<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout1"
    android:background="#ffffff" >

    
        <LinearLayout
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/deliveries_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.13"
                android:background="@drawable/deliveries_icon"
                 />

            <Button
                android:id="@+id/returns_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.13"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/returns_icon" />
        </LinearLayout>
    

   <LinearLayout
        android:id="@+id/main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/payment"
        android:layout_marginTop="5dp"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/payment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#800080"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.13"
                android:text="From:" />

            <Button
                android:id="@+id/date_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:layout_gravity="right"
                android:text="22/01/2014"
                android:textSize="20sp"
                android:layout_weight="0.13"
                android:textColor="#800080"
               
                android:background="@drawable/date_time_long_bt"/>

            <!-- <Button
                android:id="@+id/time_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.13"
                android:text="12:00 PM"
                android:textColor="@drawable/button_text_change"
                android:background="@drawable/unit_cash" />
 -->
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/payment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                 android:textColor="#800080"
                android:textSize="20sp"
                android:layout_marginRight="35dp"
                android:text="To:" />

            <Button
                android:id="@+id/date_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="22/01/2014"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="0.13"
                android:textColor="#800080"
                android:background="@drawable/date_time_long_bt" />

            <!-- <Button
                android:id="@+id/time_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.13"
                android:text="12:00 AM"
                android:textColor="@drawable/button_text_change"
                android:background="@drawable/unit_cash" />
 -->
            
        </LinearLayout>
        <LinearLayout
            android:id="@+id/payment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/new_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:visibility="invisible"
                android:textColor="@drawable/button_back_text"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/returns_note_new"
                 />

            
        </LinearLayout>
    </LinearLayout>
    
	
</RelativeLayout>