<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ffffff" >
    <ImageView
	 	android:id="@+id/image_paid"
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:layout_centerHorizontal="true"
	   	android:background="@drawable/paid_stemp"
	   	android:contentDescription="@string/app_name" />
    
    <LinearLayout
        android:id="@+id/main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_paid"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:gravity="center_horizontal|center_vertical"
            android:text="Total Paid"
            
            android:textSize="20sp" />
		
		<TextView
		    android:id="@+id/paid_ammount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center_horizontal|center_vertical"
            android:text="500,00"
            android:textColor="#800080"
            android:textSize="40sp"
            android:textStyle="bold" />
		
		<TextView
		    android:id="@+id/remaining_ammount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center_horizontal|center_vertical"
            android:text="Remaining Balance : 236,00"
            android:textColor="#800080"
            android:textStyle="bold"
            android:textSize="20sp" />

       	<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center_horizontal|center_vertical"
            android:text="Printing Receipt"
            android:layout_marginBottom="10dp"
            android:textColor="#800080"
            android:textSize="15sp" />

 </LinearLayout>
 <LinearLayout
     android:id="@+id/main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_paid"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
        
        
        
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:gravity="center_horizontal|center_vertical"
            android:text="Total Paid"
            
            android:textSize="20sp" />
		
		<TextView
		    android:id="@+id/paid_ammount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center_horizontal|center_vertical"
            android:text="500,00"
            android:textColor="#800080"
            android:textSize="40sp"
            android:textStyle="bold" />
		
		
       	<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center_horizontal|center_vertical"
            android:text="Printing Receipt"
            android:layout_marginBottom="10dp"
            android:textColor="#800080"
            android:textSize="15sp" />

 </LinearLayout>
 
</RelativeLayout>
