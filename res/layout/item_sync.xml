<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
  android:layout_height="wrap_content"
    android:background="@drawable/setting_onpressed"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/listimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        
        android:contentDescription="@string/hello_world"
        
        android:scaleType="centerCrop"
        android:src="@drawable/setting_image_change" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/listimage"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/update1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Update Items"
            android:textColor="@drawable/button_text_change"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/update2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Sycn item list with CMS"
            android:textColor="@drawable/button_text_change"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
