<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center">
    
    <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:focusableInTouchMode="true"
    	android:background="@drawable/inventory_detail_page_bg"
    	android:orientation="vertical" >
    	
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="fill_parent"
            
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible" >
            
        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/deliveries_notes_heading"
            android:contentDescription="@string/app_name" />
        
        
        
        <LinearLayout
        
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center"
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="20dp"
    	android:layout_marginTop="5dp"
    	android:orientation="vertical" >
            
            <TextView
                android:layout_width="fill_parent"
                
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="right"
                android:text="Item Name:"
                android:textColor="#800080"
                android:textSize="20sp" />
            
            <TextView
            android:layout_width="fill_parent"
            
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
            android:layout_marginTop="10dp"
            android:gravity="right"
            
            android:text="Group:"
            android:textSize="20sp" />
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center"
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="5dp"
    	android:orientation="vertical" >
            
            <TextView
                android:id="@+id/note_id"
            android:layout_width="fill_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
                        android:textStyle="bold"
            android:text="197-5"
            android:textSize="20sp" />
            
            <TextView
            	android:id="@+id/delivery_date"
            android:layout_width="fill_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
            android:layout_marginTop="10dp"
            
            android:text="12/01/2014"
            android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="30dp"
    	android:layout_marginTop="5dp"
    	android:orientation="vertical" >
            
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
            
            android:gravity="right"
            android:text="Item Code.:"
            android:textStyle="bold"
            android:textSize="20sp" />
            
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#800080"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Item Barcode:"
            android:textSize="20sp" />
        </LinearLayout>
        
        
        <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center"
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="5dp"
    	android:orientation="vertical" >
            
            <TextView
                android:id="@+id/company_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
                        android:textStyle="bold"
            android:gravity="left"
            android:text="0987654321"
            android:textSize="20sp" />
            
            <TextView
                android:id="@+id/branch_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="12/01/2014"
            android:textSize="20sp" />
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="30dp"
    	android:layout_marginTop="5dp"
    	android:orientation="vertical" >
            
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
            
            android:gravity="right"
            android:text="Color:"
            android:textStyle="bold"
            android:textSize="20sp" />
            
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#800080"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Size:"
            android:textSize="20sp" />
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="5dp"
    	android:orientation="vertical" >
            
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
            
            android:gravity="right"
            android:text="88"
            android:textStyle="bold"
            android:textSize="20sp" />
            
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#800080"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="Large"
            android:textSize="20sp" />
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="30dp"
    	android:layout_marginTop="5dp"
    	android:orientation="vertical" >
            
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
            
            android:gravity="right"
            android:text="Company No."
            android:textStyle="bold"
            android:textSize="20sp" />
            
            
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="50dp"
    	android:layout_marginTop="5dp"
    	android:orientation="vertical" >
            
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#800080"
            
            android:gravity="right"
            android:text="8987867668"
            android:textStyle="bold"
            android:textSize="20sp" />
            
            
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center"
    	android:focusableInTouchMode="true"
    	android:layout_marginLeft="10dp"
    	
    	android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.13"
                android:text=""
                android:textColor="#800080"
                android:textStyle="bold"
                android:background="@drawable/deliveries_cross_icon" />
            
        </LinearLayout>
        
        
                       
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:layout_marginTop="25dp"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >
            
            
			<ScrollView
			    android:id="@+id/centreProgram_feedback"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:overScrollMode="always"
			    android:orientation="horizontal">
         	
				<TableLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:id="@+id/purchase_items"
		            android:layout_weight="1"
		            android:stretchColumns="1,2,3,4,5,6,7">
	      		</TableLayout>
        	</ScrollView>            
        </LinearLayout>
    	
    	
    	</LinearLayout>
    
    
    
    
